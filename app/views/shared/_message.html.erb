<li>
    <%= link_to message do %>
        <%= image_tag message.image, :class => 'message-avatar' %>
        <div class="message">
            <span class="message-sender">
                <%= message.user.name %>
            </span>
            <span class="message-time">
                <%= Time.now - message.created_at %>
            </span>
            <span class="message-subject">
                <%= message.subject %>
            </span>
            <span class="message-body">
                <%= message.body %>
            </span>
        </div>
    <% end %>
</li>