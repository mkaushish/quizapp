<%= simple_form_for(@response) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :question_id, value:@question.id %>
    <%= f.hidden_field :user_id, value:current_user.id if signed_in? %>
    <%= @question.description %>

    <%= f.fields_for :user_answers do |builder| %>
    	<% answer = @question.answers[builder.index] %>
    	<%= builder.check_box :checked %><%=answer.description%>
    	<%= builder.hidden_field :answer_id, value:answer.id %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
