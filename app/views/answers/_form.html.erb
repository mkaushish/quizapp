<%= simple_form_for(@answer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :checked %>
    <%= f.input :points_c %>
    <%= f.input :points_w %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
